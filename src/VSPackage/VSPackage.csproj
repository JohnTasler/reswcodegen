<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472-windows</TargetFramework>
    <ProjectGuid>{05F77BFB-CE11-4948-8174-F938C5B7F31C}</ProjectGuid>
    <OutputType>Library</OutputType>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>ChristianHelle.DeveloperTools.CodeGenerators.Resw.VSPackage</RootNamespace>
    <AssemblyName>ReswFileCodeGenerator</AssemblyName>
    <LangVersion>12</LangVersion>
    <ImplicitUsings>true</ImplicitUsings>
    <UseWindowsForms>true</UseWindowsForms>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <VssdkCompatibleExtension>true</VssdkCompatibleExtension>
    <UseCodebase>true</UseCodebase>
    <GeneratePkgDefFile>true</GeneratePkgDefFile>
    <IncludeAssemblyInVSIXContainer>true</IncludeAssemblyInVSIXContainer>
